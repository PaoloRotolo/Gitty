<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/reportFrame"
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/primary">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="192dp"
                android:text="@string/headline1"
                android:gravity="bottom"
                android:paddingBottom="16dp"
                android:textColor="@color/text"
                android:textSize="@dimen/abc_text_size_display_1_material"/>
            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:paddingTop="32dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="32dp">
                        <EditText
                            android:id="@+id/bug_title"
                            android:singleLine="true"
                            android:inputType="textCapSentences"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/abc_text_size_body_2_material"
                            android:hint="@string/title"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="32dp">
                        <EditText
                            android:id="@+id/bug_description"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/abc_text_size_body_2_material"
                            android:hint="@string/description"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="32dp">
                        <EditText
                            android:id="@+id/device_info"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:textSize="@dimen/abc_text_size_body_2_material"
                            android:hint="@string/device_info"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/loginFrame"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/primary2">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="192dp"
                    android:text="@string/headline2"
                    android:gravity="bottom"
                    android:paddingBottom="16dp"
                    android:textColor="@color/text"
                    android:textSize="@dimen/abc_text_size_display_1_material"/>
                <android.support.v7.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:paddingTop="32dp"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="32dp">
                            <EditText
                                android:id="@+id/login_username"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textSize="@dimen/abc_text_size_body_2_material"
                                android:hint="@string/login_username"/>
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="32dp">
                            <EditText
                                android:id="@+id/login_password"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:textSize="@dimen/abc_text_size_body_2_material"
                                android:hint="@string/login_password"/>
                        </android.support.design.widget.TextInputLayout>
                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/github_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="@string/login_skip"/>
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/github_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:visibility="gone"
                            android:onClick="openGitHubRegisterPage"
                            android:text="@string/login_skip"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/material_ripple"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/primary2"
        android:visibility="invisible"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:onClick="showLoginPage"
            android:src="@drawable/ic_navigate_next_black_24dp"
            fab:fab_colorNormal="@color/accent"
            fab:fab_colorPressed="@color/dark_accent"
            fab:fab_colorRipple="@color/dark_accent" />
    </FrameLayout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:onClick="reportIssue"
            android:src="@drawable/ic_send_white_18dp"
            fab:fab_colorNormal="@color/accent2"
            fab:fab_colorPressed="@color/accent2_dark"
            fab:fab_colorRipple="@color/accent2_dark" />
    </FrameLayout>
</RelativeLayout>